{
  "compilerOptions": {
    "target": "ES2024",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Workspaces setup */
    "composite": true,
    "paths": {
      "@volxel/3d-viewer": ["./volxel-3d-viewer/src/index.ts"]
    }
  },
  "include": [
    "./src"
  ],
  "references": [
    {
      "path": "./volxel-3d-viewer"
    }
  ]
}
